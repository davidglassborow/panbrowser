        <Viewport3D Name="_viewport" ClipToBounds="True" HorizontalAlignment="Stretch">

            <!-- Defines the camera used to view the 3D object. -->
            <Viewport3D.Camera>
                <PerspectiveCamera Position="0,0,-5" LookDirection="0,0,1" FieldOfView="60" />
